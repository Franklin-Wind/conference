<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franklin.conference.fragment.EstablishFragment">


    <Button
        android:id="@+id/establish_btn_create"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="发布会议" />

    <TextView
        android:id="@+id/establish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:text="会议名称" />

    <TextView
        android:id="@+id/establish_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/establish_edit_container"
        android:layout_alignStart="@+id/establish_name"
        android:text="会议内容" />

    <TextView
        android:id="@+id/establish_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/establish_name"
        android:layout_marginTop="153dp"
        android:text="会议地点" />

    <TextView
        android:id="@+id/establish_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/establish_edit_type"
        android:layout_alignStart="@+id/establish_name"
        android:text="会议类型" />

    <TextView
        android:id="@+id/establish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/establish_name"
        android:layout_marginBottom="258dp"
        android:text="会议时间" />

    <EditText
        android:id="@+id/establish_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="31dp"
        android:ems="10"
       android:hint="在此填写" />

    <EditText
        android:id="@+id/establish_edit_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/establish_edit_name"
        android:layout_marginTop="86dp"
        android:hint="在此填写"
        android:ems="10" />

    <EditText
        android:id="@+id/establish_edit_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/establish_place"
        android:layout_alignStart="@+id/establish_edit_name"
        android:ems="10"
        android:hint="在此填写"/>

    <EditText
        android:id="@+id/establish_edit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/establish_edit_name"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:hint="在此填写"/>

    <TextView
        android:id="@+id/establish_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/establish_time"
        android:layout_alignStart="@+id/establish_edit_name"
        android:ems="10"
        android:text="选择时间"/>


</RelativeLayout>
